<% set_full_title("#{@user.name}さん") %>
<div class="row users-show">
  <% if logged_in? %>
    <%= render 'shared/user_sidebar' %>
  <% end %>
  <div class="col-md-8">
    <div>
      <%= link_to get_gravatar_img(@user, size: 50), @user ,class:"d-inline" %>
      <span class="user"><%= @user.name %></span>
    </div>
    <div>
      <span class="content d-block">
        <%= @user.profile %>
      </span>
      <% if current_user?(@user) %>
        <small><%= link_to "プロフィールを編集する" , edit_user_path %></small>
      <% end %>
    </div>
    <hr class="my-4">
      <%= @user.name %>さんの質問(<%= @user.questions.count %>件)
    <hr class="my-3">
      <ul class="users jscroll">
      <%= render @questions %>
      <%= paginate @questions %>
  </ul>
  </div>
</div>
